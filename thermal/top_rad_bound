% collect node IDs from top surface where xducer exists
% apply node loads to these points
% mark 08/22/02
fname='arfi61a_therm.dyn';
measurementPointsandNodes=read_dyna_nodes(fname);
index=1;
for x=1:length(measurementPointsandNodes),
	if (measurementPointsandNodes(x,4)==0)
		topnodes(index) = measurementPointsandNodes(x,1);
		index=index+1;
	end;
end;
fid=fopen('top_temp_bc.asc','w');
fprintf(fid,'*BOUNDARY_TEMPERATURE_NODE \n');
for y=1:(index-1),
	fprintf(fid,'%i,0,0.0 \n',topnodes(y));
end;	
fclose(fid);
